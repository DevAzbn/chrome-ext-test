{
	"manifest_version": 2,
	
	"name": "Тестовое расширение Azbn",
	"description": "Гоняем расширение для тестов",
	"version": "0.0.0.1",
	"default_locale": "ru",
	
	"permissions": [
		"activeTab",
		"browsingData",
		"storage",
		"contextMenus",
		"notifications",
		"http://*/*",
		"https://*/*"
	],
	
	"content_scripts": [{
		"matches": ["*://*/*"],
		"run_at": "document_end",
		"js": ["js/jquery.min.js", "js/__inject.document-ready.js"],
		"css": ["css/__inject.style.css"]
	}],
	
	"browser_action": {
		"default_title": "Тестовое расширение Azbn",
		"default_icon": "img/logo.png",
		"default_popup": "html/popup.html"
	},
	
	"options_ui": {
		"page": "html/option.html",
		"chrome_style": true
	},
	
	"background": {
		"scripts": ["js/AzbnExt.js","js/bg.js"],
		"persistent": false
	}
}